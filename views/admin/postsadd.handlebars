{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h2>Nova postagem: </h2>
        <form action="/admin/posts/new" method="post">
            <input type="hidden" name="titular" value="{{titular}}">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control mt-2" placeholder="título" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control mt-2" placeholder="Slug" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control mt-2" placeholder="Descrição" required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control mt-2" placeholder="Conteudo" required></textarea>
            <label for="categoria">Categorias: </label>
            <select name="categoria" class="form-control mt-2">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Criar Postagem</button>
        </form>
        
    </div>
</div>